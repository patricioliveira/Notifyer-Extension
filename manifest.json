{
  "manifest_version": 3,
  "name": "Notifyer Extension",
  "description": "Notifique os clientes do seu neg√≥cio pelo WhatsApp a partir do seu painel de pedidos.",
  "version": "1.0",
  "permissions": ["debugger", "tabs", "storage"],
  "host_permissions": ["https://instadelivery.com.br/store/orders/*"],
  "options_page": "/src/pages/options/options.html",
  "action": {
    "default_popup": "/src/pages/popup/popup.html",
    "default_icon": {
      "16": "/images/icon-16.png",
      "32": "/images/icon-32.png",
      "48": "/images/icon-48.png",
      "128": "/images/icon-128.png"
    }
  },
  "icons": {
    "16": "/images/icon-16.png",
    "32": "/images/icon-32.png",
    "48": "/images/icon-48.png",
    "128": "/images/icon-128.png"
  },
  "background": {
    "service_worker": "./src/services/service-worker.service.js",
    "script": ["./src/class/logdata-model.js", "./src/services/database.service.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://instadelivery.com.br/store/orders/*"],
      "js": ["./src/scripts/content-script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["./src/scripts/interceptor.js"],
    "matches": ["https://instadelivery.com.br/*"]
  }]
}
