{
  "manifest_version": 3,
  "name": "Notifyer Extension",
  "description": "Notifique os clientes do seu neg√≥cio pelo WhatsApp a partir do seu painel de pedidos.",
  "version": "1.0",
  "permissions": ["debugger", "tabs"],
  "host_permissions": ["https://instadelivery.com.br/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://instadelivery.com.br/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["script.js"],
    "matches": ["https://instadelivery.com.br/*"]
  }]
}
